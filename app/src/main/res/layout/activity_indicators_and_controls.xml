<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.chan.smartcar.IndicatorsAndControls">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="HeadLights"
        android:id="@+id/textView_headlights"
        android:layout_marginTop="40dp"
        android:layout_below="@+id/button_connect"
        android:layout_toRightOf="@+id/imageView"
        android:layout_toEndOf="@+id/imageView"
        android:layout_marginLeft="27dp"
        android:layout_marginStart="27dp" />

    <Switch
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/switch_headlights"
        android:checked="false"
        android:layout_marginRight="11dp"
        android:layout_marginEnd="11dp"
        android:layout_alignTop="@+id/textView_headlights"
        android:layout_alignRight="@+id/button_connect"
        android:layout_alignEnd="@+id/button_connect" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Left Door"
        android:id="@+id/textView_leftdoor"
        android:layout_marginTop="50dp"
        android:layout_below="@+id/switch_headlights"
        android:layout_alignLeft="@+id/textView_headlights"
        android:layout_alignStart="@+id/textView_headlights" />

    <Switch
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/switch_leftdoor"
        android:checked="false"
        android:layout_alignTop="@+id/textView_leftdoor"
        android:layout_alignLeft="@+id/switch_headlights"
        android:layout_alignStart="@+id/switch_headlights" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Right Door"
        android:id="@+id/textView_rightdoor"
        android:layout_marginTop="50dp"
        android:layout_below="@+id/switch_leftdoor"
        android:layout_alignLeft="@+id/textView_leftdoor"
        android:layout_alignStart="@+id/textView_leftdoor" />

    <Switch
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/switch_rightdoor"
        android:checked="false"
        android:layout_alignTop="@+id/textView_rightdoor"
        android:layout_alignLeft="@+id/switch_leftdoor"
        android:layout_alignStart="@+id/switch_leftdoor" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Connect"
        android:id="@+id/button_connect"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:enabled="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Air Conditioner"
        android:id="@+id/textView_aircond"
        android:layout_marginTop="50dp"
        android:layout_below="@+id/switch_rightdoor"
        android:layout_alignLeft="@+id/textView_rightdoor"
        android:layout_alignStart="@+id/textView_rightdoor" />

    <Switch
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/switch_aircond"
        android:checked="false"
        android:layout_alignTop="@+id/textView_aircond"
        android:layout_alignLeft="@+id/switch_rightdoor"
        android:layout_alignStart="@+id/switch_rightdoor" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Alarm"
        android:id="@+id/textView_alarm"
        android:layout_marginTop="50dp"
        android:layout_below="@+id/switch_aircond"
        android:layout_alignLeft="@+id/textView_aircond"
        android:layout_alignStart="@+id/textView_aircond" />

    <Switch
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/switch_alarm"
        android:checked="false"
        android:layout_alignTop="@+id/textView_alarm"
        android:layout_alignLeft="@+id/switch_aircond"
        android:layout_alignStart="@+id/switch_aircond" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:adjustViewBounds="true"
        android:id="@+id/imageView"
        android:src="@drawable/headlights"
        android:fitsSystemWindows="false"
        android:scaleType="fitXY"
        android:layout_alignTop="@+id/textView_headlights"
        android:maxWidth="40dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_above="@+id/textView_leftdoor" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:adjustViewBounds="true"
        android:id="@+id/imageView2"
        android:src="@drawable/leftdoor"
        android:fitsSystemWindows="false"
        android:scaleType="fitXY"
        android:maxWidth="40dp"
        android:layout_marginBottom="43dp"
        android:layout_above="@+id/switch_rightdoor"
        android:layout_toLeftOf="@+id/textView_headlights"
        android:layout_toStartOf="@+id/textView_headlights" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:adjustViewBounds="true"
        android:id="@+id/imageView3"
        android:src="@drawable/rightdoor"
        android:fitsSystemWindows="false"
        android:scaleType="fitXY"
        android:maxWidth="40dp"
        android:layout_below="@+id/switch_leftdoor"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="43dp" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:adjustViewBounds="true"
        android:id="@+id/imageView4"
        android:src="@drawable/aircond"
        android:fitsSystemWindows="false"
        android:scaleType="fitXY"
        android:maxWidth="40dp"
        android:layout_below="@+id/imageView3"
        android:layout_toLeftOf="@+id/textView_headlights"
        android:layout_toStartOf="@+id/textView_headlights"
        android:layout_marginTop="39dp" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:adjustViewBounds="true"
        android:id="@+id/imageView5"
        android:src="@drawable/alarm"
        android:fitsSystemWindows="false"
        android:scaleType="fitXY"
        android:maxWidth="40dp"
        android:layout_alignBottom="@+id/switch_alarm"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

</RelativeLayout>
